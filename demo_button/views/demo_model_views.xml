<odoo>
    <record id="action_demo_button" model="ir.actions.act_window">
        <field name="name">Demo Button</field>
        <field name="res_model">demo.button</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_demo_button_tree" model="ir.ui.view">
        <field name="name">demo.button.tree</field>
        <field name="model">demo.button</field>
        <field name="arch" type="xml">
            <list string="Demo Button">
                <field name="name"/>
            </list>
        </field>
    </record>

  <record id="view_demo_button_form" model="ir.ui.view">
    <field name="name">demo.button.form</field>
    <field name="model">demo.button</field>
    <field name="arch" type="xml">
        <form string="Demo Button">
            <!-- ðŸ‘‡ Button in the header (top of form) -->
            <header>
                <button name="action_show_message"
                        type="object"
                        string="Click Me"
                        class="btn-primary"/>
            </header>

            <sheet>
                <group>
                    <field name="name"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

    

    <menuitem id="menu_demo_button_root"
              name="Demo Button"
              sequence="10"/>

    <menuitem id="menu_demo_button_main"
              name="Records"
              parent="menu_demo_button_root"
              action="action_demo_button"/>

    
</odoo>
