<?xml version="1.0" encoding="UTF-8"?>
<templates id="odoo19_global_search_templates" xml:space="preserve">

    <t t-name="odoo19_global_search.GlobalSearch" owl="1">
        <div class="o19-global-search-systray">
            <!-- Systray icon -->
            <a
                type="button"
                class="o_systray_item o19-global-search-toggle"
                t-on-click="togglePanel"
                title="Global Search"
            >
                <i class="fa fa-search"/>
            </a>

            <!-- Overlay & panel -->
            <t t-if="state.open">
                <div class="o19-global-search-backdrop" t-on-click="closePanel"/>
                <div class="o19-global-search-panel">
                    <div class="o19-global-search-header">
                        <input
                            t-ref="input"
                            class="o19-global-search-input"
                            type="text"
                            placeholder="Search across Sales, Invoices, Contacts, Products..."
                            t-on-input="onInput"
                        />
                    </div>

                    <div class="o19-global-search-body">
                        <!-- 1) Loading -->
                        <t t-if="state.loading">
                            <div class="o19-global-search-loading">
                                Searching...
                            </div>
                        </t>

                        <!-- 2) Results -->
                        <t t-elif="state.results.length">
                            <t t-foreach="state.results" t-as="r" t-key="r.key">
                                <div
                                    class="o19-global-search-result"
                                    t-on-click="onResultClick"
                                    t-att-data-model="r.model"
                                    t-att-data-id="r.id"
                                >
                                    <div class="o19-result-main">
                                        <span class="o19-result-title">
                                            <t t-esc="r.display_name"/>
                                        </span>
                                        <t t-if="r.subtitle">
                                            <span class="o19-result-subtitle">
                                                <t t-esc="r.subtitle"/>
                                            </span>
                                        </t>
                                    </div>
                                    <div class="o19-result-model">
                                        <t t-esc="r.model_label"/>
                                    </div>
                                </div>
                            </t>
                        </t>

                        <!-- 3) No results but user typed something -->
                        <t t-elif="state.query">
                            <div class="o19-global-search-empty">
                                No results
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>

</templates>
