<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_appointment_booking_tree" model="ir.ui.view">
        <field name="name">appointment.booking.tree</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_name"/>
                <field name="partner_email"/>
                <field name="phone"/>
                <field name="preferred_datetime"/>
                <field name="state"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <record id="view_appointment_booking_form" model="ir.ui.view">
        <field name="name">appointment.booking.form</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <form string="Appointment Booking">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="submitted,confirmed,declined"/>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_decline"
                            type="object"
                            string="Decline"
                            modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                </header>
                <sheet>
                    <group col="2">
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_name"/>
                            <field name="partner_email"/>
                            <field name="phone"/>
                            <field name="preferred_datetime"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="confirmed_by" readonly="1"/>
                            <field name="decision_note" placeholder="Required if declining"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" colspan="2"/>
                    </group>
                    <chatter/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_appointment_booking" model="ir.actions.act_window">
        <field name="name">Appointment Bookings</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_appointment_booking_root" name="Appointments" parent="website.menu_website_configuration" sequence="90"/>
    <menuitem id="menu_appointment_booking" name="Booking Requests" parent="menu_appointment_booking_root" action="action_appointment_booking" sequence="1"/>
</odoo>
