<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="appointment_booking_form" name="Appointment Booking Form" >
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <h1 class="mb-4">Book an Appointment</h1>
                <form t-att-action="request.httprequest.path" method="post" class="o_appointment_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group mb-3">
                        <label for="partner_name">Your name</label>
                        <input type="text" id="partner_name" name="partner_name" class="form-control" required="required"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="partner_email">Email</label>
                        <input type="email" id="partner_email" name="partner_email" class="form-control" required="required"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="phone">Phone</label>
                        <input type="text" id="phone" name="phone" class="form-control"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="preferred_datetime">Preferred date/time</label>
                        <input type="datetime-local" id="preferred_datetime" name="preferred_datetime" class="form-control"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="notes">Notes</label>
                        <textarea id="notes" name="notes" class="form-control" rows="4" placeholder="Anything we should know?"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send request</button>
                </form>
            </div>
        </t>
    </template>

    <template id="appointment_booking_thanks" name="Appointment Booking Thank You">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5 text-center">
                <h1>Thanks<t t-if="partner_name">, <t t-esc="partner_name"/></t>!</h1>
                <p class="lead">We've received your appointment request. We'll confirm by email shortly.</p>
                <a href="/" class="btn btn-secondary mt-3">Back to home</a>
            </div>
        </t>
    </template>
</odoo>
